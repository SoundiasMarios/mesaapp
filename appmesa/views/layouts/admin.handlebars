			          		<ul class="dropdown-menu">
			          			{{#if createuser_selected}}
			            		<li class="selected"><a href="#" id="show_signup_form">Δημιουργία Χρήστη</a></li>
			            		{{else}}
			            		<li><a href="#" id="show_signup_form">Δημιουργία Χρήστη</a></li>
			            		{{/if}}
			            		{{#if allusers_selected}}
					            <li class="selected"><a href="#" id="show_all_users">Λίστα Χρηστών</a></li>
					            {{else}}
					            <li><a href="#" id="show_all_users">Λίστα Χρηστών</a></li>
					            {{/if}}
					            {{#if otherusersposts_selected}}
					            <li class="selected"><a href="#" id="other_users_posts">Δημοσιεύσεις Χρηστών</a></li>
					            {{else}}
					            <li><a href="#" id="other_users_posts">Δημοσιεύσεις Χρηστών</a></li>
					            {{/if}}
			          		</ul>
		         			{{else}}
		         			<a class="dropdown-toggle" data-toggle="dropdown" href="#">Χρήστες <span class="caret"></span></a>
			          		<ul class="dropdown-menu">
			            		<li><a href="#" id="show_signup_form">Δημιουργία Χρήστη</a></li>
					            <li><a href="#" id="show_all_users">Λίστα Χρηστών</a></li>
					            <li><a href="#" id="other_users_posts">Δημοσιεύσεις Χρηστών</a></li>
			          		</ul>
		         			{{/if}}
