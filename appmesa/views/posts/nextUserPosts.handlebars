<!DOCTYPE html>
{{#if userPosts}}
	{{#each userPosts}}
		<div class="panel panel-default">
			{{#ifEqual this.type 'announcement'}}
					{{#each this.announcement_content}}
						<div class="panel-heading" role="tab" id="heading{{this._id}}">
					      	
					      	<h4 class="panel-title">
						        {{#if this.en_title}}
									<span class="content_title">{{this.title}} | {{this.en_title}}</span>
								{{else}}
									<span class="content_title"> {{this.title}}</span>
								{{/if}}
					      	</h4>
					      	<hr>
					      	<div class='content_info'>
					      		<div class="group">
					      			<p><span class="glyphicon glyphicon-file"></span> Ανακοίνωση</p>
					      		</div>
					      		<div class="group">
									<div class="posted_by">
										<p>
											<span class="glyphicon glyphicon-user"></span>
											<span> {{../this.postedBy.username}},</span>
											<span> {{changeDateFormat ../this.uploadDate}}</span>
										</p>
									</div>
								</div>
								{{#if this.en_title}}
								<div class="group">
					        		<p><span class="glyphicon glyphicon-globe"></span> Ελληνικά, Αγγλικά</p>
					        	</div>
					        	{{/if}}
							</div>
							<div class="tags">
								<span class="glyphicon glyphicon-tags"></span>
								{{#each ../this.tags}}
								<a href="#" class="tag" mesa-data="{{this}}">#{{this}}</a>
								{{/each}}
							</div>
						    <div class="modify_buttons_container">
								<button class="edit_announcement button btn btn-primary" mesa-data="{{../this._id}}" type="button" title="Επεξεργασία ανακοίνωσης">
									<span class="glyphicon glyphicon-pencil"></span>
								</button>
								<button class="delete_announcement button btn btn-danger" mesa-data="{{../this._id}}" type="button" title="Διαγραφή ανακοίνωσης">
									<span class="glyphicon glyphicon-trash"></span>
								</button>
							</div>
					    </div>
					    <div id="collapse{{this._id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{this._id}}">
				      		<div class="panel-body"></div>
				      	</div>
				      	<div class="btn_show_post">
							<button class="moreinfolink_announcement btn btn-default collapsed" mesa-data="{{../this._id}}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{this._id}}" aria-expanded="false" aria-controls="collapse{{this._id}}" type="submit"><span class="glyphicon glyphicon-menu-down"></span></button>
						</div>
					{{/each}}
				{{else}}
					{{#each this.event_content}}
						<div class="panel-heading" role="tab" id="heading{{this._id}}">
					      	
				      		<h4 class="panel-title">
						        {{#if this.en_title}}
									<span class="content_title">{{this.title}} | {{this.en_title}}</span>
								{{else}}
									<span class="content_title"> {{this.title}}</span>
								{{/if}}
					      	</h4>
					      	<hr>
					      	<div class='content_info'>
					      		<div class="group">
					      			<p><span class="glyphicon glyphicon-file"></span> Εκδήλωση</p>
					      		</div>
					      		<div class="group">
									<div class="posted_by">
										<p>
											<span class="glyphicon glyphicon-user"></span>
											<span> {{../this.postedBy.username}},</span>
											<span> {{changeDateFormat ../this.uploadDate}}</span>
										</p>
									</div>
								</div>
								<div class="group">
									<div class="start_date">
										<p><span class="glyphicon glyphicon-calendar"></span> <span>{{changeDateFormat this.startDate}}</span></p>
									</div>
									<div class="end_date">
										<p> - <span>{{changeDateFormat this.endDate}}</span></p>
									</div>
								</div>
								<div class="group">
									<div class="start_time">
										<p><span class="glyphicon glyphicon-time"></span> <span>{{this.startTime}}</span></p>
									</div>
									<div class="end_time">
										<p> - <span>{{this.endTime}}</span></p>
									</div>
								</div>
								<div class="group">
									<p><span class="glyphicon glyphicon-info-sign"></span> <span id="event_state">{{eventStatusType this.state}}</span></p>
								</div>
								{{#if this.en_title}}
								<div class="group">
					        		<p><span class="glyphicon glyphicon-globe"></span> Ελληνικά, Αγγλικά</p>
					        	</div>
					        	{{/if}}
							</div>
							<div class="tags">
								<span class="glyphicon glyphicon-tags"></span>
								{{#each ../this.tags}}
								<a href="#" class="tag" mesa-data="{{this}}">#{{this}}</a>
								{{/each}}
							</div>
							<div class="modify_buttons_container">
								<button class="edit_event button btn btn-primary" mesa-data="{{../this._id}}" type="button" title="Επεξεργασία εκδήλωσης">
									<span class="glyphicon glyphicon-pencil"></span>
								</button>
								{{#ifEqualOR this.state 'canceled' 'finished'}}
									<button class="cancel_event button btn btn-warning" mesa-data="{{../../this._id}}" type="button" title="Η εκδήλωση έχει ακυρωθεί ή ολοκληρωθεί" disabled>
										<span class="glyphicon glyphicon-remove"></span>
									</button>
								{{else}}
									<button class="cancel_event button btn btn-warning" mesa-data="{{../../this._id}}" type="button" title="Ακύρωση εκδήλωσης">
										<span class="glyphicon glyphicon-remove"></span>
									</button>
								{{/ifEqualOR}}
								<button class="delete_event button btn btn-danger" mesa-data="{{../this._id}}" type="button" title="Διαγραφή εκδήλωσης">
									<span class="glyphicon glyphicon-trash"></span>
								</button>
							</div>
					    </div>
					    <div id="collapse{{this._id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{this._id}}">
				      		<div class="panel-body"></div>
				    	</div>
				      	<div class="btn_show_post">
							<button class="moreinfolink_event btn btn-default collapsed" mesa-data="{{../this._id}}" data-toggle="collapse" data-parent="#accordion" href="#collapse{{this._id}}" aria-expanded="false" aria-controls="collapse{{this._id}}" type="submit"><span class="glyphicon glyphicon-menu-down"></span></button>
						</div>
					{{/each}}
				{{/ifEqual}}
		</div>
	{{/each}}
	{{#ifEqual userPosts.length postsLimit}}
		<div id="btn_container">
			<button id="more_userposts" class="btn" mesa-next-page="{{page}}">Εμφάνιση Περισσότερων</button>
		</div>
	{{else}}
		<div id="no_more_results">Δεν υπάρχουν παλαιότερες δημοσιεύσεις</div>
	{{/ifEqual}}
{{else}}
	<div id="no_more_results">Δεν υπάρχουν παλαιότερες δημοσιεύσεις</div>
{{/if}}